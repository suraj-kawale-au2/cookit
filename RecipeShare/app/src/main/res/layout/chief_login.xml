<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <TextView
        android:text="Username :"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:layout_marginTop="71dp"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/TFchiefname"
        android:layout_alignStart="@+id/TFchiefname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/TFchiefname"
        android:background="@color/colorAccent"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=" Password :"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/TFchiefname"
        android:layout_alignLeft="@+id/TFchiefname"
        android:layout_alignStart="@+id/TFchiefname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@color/colorAccent"
        android:id="@+id/TFchiefpass"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <Button
        android:text="Register Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bchiefreg"
        android:onClick="Chiefreg"
        android:background="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginTop="36dp"
        android:id="@+id/Bchieflogin"
        android:onClick="Chiefloggedin"
        android:layout_below="@+id/TFchiefpass"
        android:layout_alignRight="@+id/TFchiefpass"
        android:layout_alignEnd="@+id/TFchiefpass" />

    <TextView
        android:text="Don't Have Account ?"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="49dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/Bchieflogin"
        android:layout_alignLeft="@+id/TFchiefpass"
        android:layout_alignStart="@+id/TFchiefpass" />
</RelativeLayout>
